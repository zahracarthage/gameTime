<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GameTime" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyToolBarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:tint">@color/white</item>
    </style>
    <style name="MyActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@drawable/pinkgradient</item>

    </style>

    <style name="navbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:titleMargin">100dp</item>

    </style>

</resources>