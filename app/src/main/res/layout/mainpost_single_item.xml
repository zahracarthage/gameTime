<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/roundcorners"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="30dp"
    tools:context=".MainPostAdapter">

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:text="Schecule"
        android:id="@+id/MainPostTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14dp"

        />
    <LinearLayout
        android:id="@+id/RelativeView"
        app:layout_constraintTop_toBottomOf="@+id/MainPostTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_width="match_parent"

        android:layout_height="110dp" >
    <TextView
        android:text="Easily Schedule EVent games then find like minded players for battle, you up for it ?"
        android:id="@+id/MainPostDescription"
        android:textSize="13sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"

        />

    <ImageView
        android:id="@+id/MainPostPicture"
        android:layout_alignRight= "@+id/MainPostDescription"

        android:background="@drawable/post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>